<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lvk.shawsank_prison.Activities.UpdateFieldActivity"
    android:background="@drawable/prison">
    <EditText
        android:id="@+id/field_id"
        android:inputType="text"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/my_edittext"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:fontFamily="casual"/>
    <EditText
        android:id="@+id/field_name"
        android:inputType="text"
        android:layout_below="@id/field_id"
        android:layout_margin="20dp"
        android:background="@drawable/my_edittext"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:fontFamily="casual"/>
    <EditText
        android:id="@+id/field_email"
        android:inputType="textEmailAddress"
        android:layout_below="@id/field_id"
        android:layout_margin="20dp"
        android:background="@drawable/my_edittext"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:fontFamily="casual"/>
    <EditText
        android:id="@+id/field_mobile"
        android:inputType="text"
        android:layout_below="@id/field_id"
        android:layout_margin="20dp"
        android:background="@drawable/my_edittext"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:fontFamily="casual"/>
    <EditText
        android:id="@+id/field_dob"
        android:inputType="text"
        android:layout_below="@id/field_id"
        android:layout_margin="20dp"
        android:background="@drawable/my_edittext"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:fontFamily="casual"/>
    <EditText
        android:id="@+id/field_crime"
        android:inputType="text"
        android:layout_below="@id/field_id"
        android:layout_margin="20dp"
        android:background="@drawable/my_edittext"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:fontFamily="casual"/>
    <EditText
        android:id="@+id/field_sentence"
        android:inputType="text"
        android:layout_below="@id/field_id"
        android:layout_margin="20dp"
        android:background="@drawable/my_edittext"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:fontFamily="casual"/>
    <EditText
        android:id="@+id/field_image"
        android:inputType="text"
        android:layout_below="@id/field_id"
        android:layout_margin="20dp"
        android:background="@drawable/my_edittext"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:fontFamily="casual"/>
</RelativeLayout>
