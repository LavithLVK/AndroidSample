<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lvk.shawsank_prison.Activities.UpdatePrisonerActivity"
    android:background="@drawable/prison">
    <android.support.v7.widget.CardView
        android:id="@+id/suggest_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/update_fields_suggestion"
            android:textSize="20sp"/>
    </android.support.v7.widget.CardView>

    <GridLayout
        android:layout_below="@id/suggest_text"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="2"
        android:rowCount="4"
        android:orientation="horizontal">
        <Button
            android:id="@+id/update_button_name"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:background="@drawable/mybutton"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:fontFamily="casual"
            android:text="@string/label_name"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/update_button_email"
            android:text="@string/label_email"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_rowWeight="1"
            android:layout_columnWeight="2"
            android:fontFamily="casual"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:background="@drawable/mybutton"/>
        <Button
            android:id="@+id/update_button_mobile"
            android:text="@string/label_mobile"
            android:textSize="15sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:background="@drawable/mybutton"/>
        <Button
            android:id="@+id/update_button_crime"
            android:text="@string/label_crime"
            android:textSize="15sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:background="@drawable/mybutton"/>
        <Button
            android:id="@+id/update_button_dob"
            android:text="@string/label_dob"
            android:textSize="15sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:background="@drawable/mybutton"/>
        <Button
            android:id="@+id/update_button_sentenced"
            android:text="@string/label_sentenced"
            android:textSize="15sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:background="@drawable/mybutton"/>
        <Button
            android:id="@+id/update_button_photo"
            android:text="@string/label_image"
            android:textSize="15sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:background="@drawable/mybutton"/>
        <Button
            android:id="@+id/update_button_back"
            android:text="@string/go_back"
            android:textSize="15sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:background="@drawable/mybutton"/>
        </GridLayout>
</RelativeLayout>
