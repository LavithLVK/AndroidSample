<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lvk.shawsank_prison.Activities.UpdatePrisonerActivity"
    android:background="@drawable/prison">
    <android.support.v7.widget.CardView
        android:id="@+id/suggest_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/update_fields_suggestion"
            android:textSize="20sp"/>
    </android.support.v7.widget.CardView>
        <GridLayout
            android:layout_below="@id/suggest_text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:rowCount="4"
            android:columnCount="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/update_button_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/mybutton"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:fontFamily="casual"
                android:text="@string/label_name"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <Button android:layout_height="wrap_content"
                android:id="@+id/update_button_email"
                android:layout_width="wrap_content"
                android:text="@string/label_email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:fontFamily="casual"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/mybutton"/>
            <Button android:layout_height="wrap_content"
                android:id="@+id/update_button_mobile"
                android:layout_width="wrap_content"
                android:text="@string/label_mobile"
                android:textSize="20sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@drawable/mybutton"/>
            <Button android:layout_height="wrap_content"
                android:id="@+id/update_button_crime"
                android:layout_width="wrap_content"
                android:text="@string/label_crime"
                android:textSize="20sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@drawable/mybutton"/>
            <Button android:layout_height="wrap_content"
                android:id="@+id/update_button_dob"
                android:layout_width="wrap_content"
                android:text="@string/label_dob"
                android:textSize="20sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@drawable/mybutton"/>
            <Button android:layout_height="wrap_content"
                android:id="@+id/update_button_sentenced"
                android:layout_width="wrap_content"
                android:text="@string/label_sentenced"
                android:textSize="15sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@drawable/mybutton"/>
            <Button android:layout_height="wrap_content"
                android:id="@+id/update_button_photo"
                android:layout_width="wrap_content"
                android:text="@string/label_image"
                android:textSize="20sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@drawable/mybutton"/>
        </GridLayout>
</RelativeLayout>
